<header class="header">
    <div class="wrap">
        <div class="header__i">
            <a href="#" class="mobile-nav-btn">
                <span></span>
                <span></span>
                <span></span>
            </a>
            <div class="logo">
                <a href="{{ url('homepage') }}">
                    {% image '@AppBundle/Resources/public/img/logo.png' %}
                        <img src="{{ asset_url }}" alt="Logo" />
                    {% endimage %}
                    <span>БРЕНД СПОРТИВНОЙ ЖЕНСКОЙ ОДЕЖДЫ</span>
                </a>
            </div>
            <nav class="top-nav">
                <div class="top-nav__i clearfix">
                    {{ knp_menu_render('AppBundle:Builder:categoriesMenu') }}
                </div>
            </nav>
            <nav class="user-nav">
                <div class="user-nav__i">
                    <ul>
                        <li>
                            <a href="#" class="search-btn">
                                <i class="icon-search"></i>
                                <i class="icon-search-hover hover"></i>
                            </a>
                            <div class="search-drop">
                                <div class="search-drop__i">
                                    <form>
                                        <input type="search" name="search"  placeholder="Что-нибудь ищите?"/>
                                        <div class="search-f-btn">
                                            <input type="submit" value=""/>
                                        </div>
                                    </form>
                                    <div class="search-drop-results">
                                        {% include "AppBundle:partials/search_drop_results.html.twig" %}
                                    </div>
                                </div>
                            </div>
                        </li>
                        <li>
                            {{ widget('products.wishCounter')|raw }}
                        </li>
                        <li>
                            {{ widget('users.headerRegistration')|raw }}
                        </li>
                        <li>
                            {{ widget('users.headerCart')|raw }}
                        </li>
                    </ul>
                </div>
            </nav>
        </div>
    </div>
    <div class="header_sub-nav">
        <div class="wrap">
            <div class="sub-nav__i">
                <ul></ul>
            </div>
        </div>
    </div>
    <div class="search-shadow"></div>
</header>
