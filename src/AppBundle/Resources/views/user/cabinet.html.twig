{% extends 'AppBundle:base.html.twig' %}

{% block out_class %} out_sub {% endblock %}

{% block body %}

    <section class="content">
        <div class="wrap">
            <div class="content__i">

                {{ widget('breadcrumbs.render')|raw }}

                <h2 class="page-title">Личный кабинет</h2>

                <div class="catalog">
                    <div class="catalog__i">

                        <div class="aside">
                            <div class="aside__i">

                                <div class="lk-nav">
                                    <div class="lk-nav__i">
                                        <ul>
                                            <li class="{{ route_class('user_profile') }}"><a
                                                        href="{{ path('user_profile') }}">Мои данные</a></li>
                                            <li class="{{ route_class('user_wish_list') }}"><a
                                                        href="{{ path('user_wish_list') }}">Список желаний</a></li>
                                            <li class="{{ route_class('user_loyal') }}"><a
                                                        href="{{ path('user_loyal') }}">Программа лояльности</a></li>
                                            <li class="{{ route_class('product_return') }}"><a
                                                        href="{{ path('product_return') }}">Возврат товара</a></li>
                                        </ul>
                                    </div>
                                </div>

                            </div>
                        </div>


                        <div class="main">

                            <div class="main__i">
                                {% block cabinet_content%} {% endblock %}
                            </div>

                        </div>

                    </div>
                </div>

            </div>
        </div>
    </section>

{% endblock %}
