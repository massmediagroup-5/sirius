<div class="item-title">
    <a href="#">
        <span>Новый заказ</span>
    </a>
</div>
<div class="item-drop">
    <div class="item-drop__i">
        <div class="new-buyer">
            <form action="" method="post">

                <div class="row">
                    <div class="inp-name">
                        <label>Номер мобильного<sup>*</sup></label>
                    </div>

                    <div class="inp">
                        <input type="text" placeholder="Введите Ваш номер"
                               name="phone" class="phone-inp" name="phone"/>
                    </div>

                </div>
                <div class="row">
                    <div class="inp-name">
                        <label>Ваше имя и фамилия<sup>*</sup></label>
                    </div>

                    <div class="inp">
                        <div class="inp-i">
                            <div class="col">
                                <input type="text" placeholder="Введите Имя"
                                       name="name"/>
                            </div>

                            <div class="col">
                                <input type="text" placeholder="Введите Фамилию"
                                       name="s-name"/>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="inp-name">
                        <label>Доставка<sup>*</sup></label>
                    </div>
                    <div class="inp">
                        <div class="inp-i active">
                            <div class="check-wrap">
                                <label><input type="radio"
                                              name="delivery" checked/>Новой
                                    почтой <span><i></i></span> <strong>1-3 дня, от
                                        35 грн.</strong></label>

                            </div>
                            <div class="inp-drop">
                                <div class="col">
                                    <select class="select"
                                            data-placeholder="Выберите город">
                                        <option value=""></option>
                                        <optgroup label="Одесская обл">
                                            <option value="1">Одесса</option>
                                            <option value="2">Одесса</option>
                                            <option value="3">Одесса</option>
                                        </optgroup>
                                    </select>
                                </div>
                                <div class="col">
                                    <select class="select"
                                            data-placeholder="Выберите склад">
                                        <option value=""></option>
                                        <optgroup label="Одесская обл">
                                            <option value="1">Одесса</option>
                                            <option value="2">Одесса</option>
                                            <option value="3">Одесса</option>
                                        </optgroup>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="inp-i">
                            <div class="check-wrap">
                                <label><input
                                            type="radio"
                                            name="delivery"/>Деливери<span><i></i></span><strong>3-7
                                        дней, от 20 грн.</strong></label>

                            </div>
                            <div class="inp-drop">
                                <div class="col">
                                    <select class="select"
                                            data-placeholder="Выберите город">
                                        <option value=""></option>
                                        <optgroup label="Одесская обл">
                                            <option value="1">Одесса</option>
                                            <option value="2">Одесса</option>
                                            <option value="3">Одесса</option>
                                        </optgroup>
                                    </select>
                                </div>
                                <div class="col">
                                    <select class="select"
                                            data-placeholder="Выберите склад">
                                        <option value=""></option>
                                        <optgroup label="Одесская обл">
                                            <option value="1">Одесса</option>
                                            <option value="2">Одесса</option>
                                            <option value="3">Одесса</option>
                                        </optgroup>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="inp-name">
                        <label>Оплата<sup>*</sup></label>
                    </div>

                    <div class="inp">
                        <div class="inp-i">
                            <div class="check-wrap">
                                <label><input
                                            type="radio" name="pay" checked/>На карту
                                    банка<span><i></i></span></label>

                            </div>
                        </div>
                        <div class="inp-i">
                            <div class="check-wrap">
                                <label><input
                                            type="radio" name="pay"/>Наложеным
                                    платежом(Новая Почта)<span><i></i></span>

                                </label>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="inp-name">
                        <label>
                            Ваш E-mail
                                                                <span>
                                                                    Если хотите получать информацию о состоянии заказа на почту
                                                                </span>
                        </label>
                    </div>

                    <div class="inp inp_comment">
                        <div class="inp-i">
                            <input type="email" placeholder="E-mail адрес"
                                   name="email"/>
                        </div>

                        <div class="inp-i">
                            <a href="#" class="add-comment">Комментарии к заказу</a>
                        </div>
                        <div class="inp-i inp-drop">
                            <textarea name="comment-box"></textarea>
                        </div>
                        <div class="inp-i right">
                            <input type="submit" value="ПОДТВЕРДИТЬ ЗАКАЗ"
                                   class="btn btn_blue"/>
                        </div>
                        <div class="inp-i right">
                            <p>Подтверждая заказ, я принимаю условия</p>

                            <p><a href="#terms" class="popup_js">пользовательского
                                    соглашения</a></p>
                        </div>
                    </div>
                </div>


            </form>

        </div>
    </div>
</div>