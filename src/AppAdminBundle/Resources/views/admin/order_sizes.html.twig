<div class="row" id="orderSizes">
    <div class="col-md-12">
        <div class="box box-success">
            <div class="box-header">
                <h4 class="box-title">{{ form_tab.name }}</h4>
            </div>
            <div class="box-body">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Артикул</th>
                            <th>Модель</th>
                            <th>Цвет</th>
                            <th>Размер</th>
                            <th>Количество</th>
                            <th>
                                {% if admin.subject.preOrderFlag %}
                                    В заказ
                                {% else %}
                                    В предзаказ
                                {% endif %}
                            </th>
                            <th>Цена</th>
                            <th>Цена со скидкой</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody class="sonata-ba-tbody">
                    {% for size in admin.subject.sizes %}
                        <tr data-size-id="{{ size.id }}">
                            <td class="control-group">{{ size.size.model.products.article }}</td>
                            <td class="control-group">{{ size.size.model.products.name }}</td>
                            <td class="control-group">{{ size.size.model.productColors.name }}</td>
                            <td class="control-group">{{ size.size }}</td>
                            <td class="control-group">{{ size.quantity }}</td>
                            <th class="editable-cell">
                                <input type="number" name="move_size" min="1" max="{{ size.quantity }}"
                                       value="{{ size.quantity }}"/>
                                <i class="fa fa-check-square js_submit_move_size"></i>
                            </th>
                            <td class="control-group">{{ size.totalPrice }}</td>
                            <td class="control-group">{{ size.discountedTotalPrice }}</td>
                            <td class="control-group">
                                <button class="btn btn-danger btn-xs js_size_remove">
                                    <span class="glyphicon glyphicon-remove"></span>
                                </button>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                    <tfoot>
                        <tr>
                            <td colspan="7" class="text-right">Всего</td>
                            <th colspan="2" id="discountedTotalPrice">{{ admin.subject.discountedTotalPrice }}</th>
                        </tr>
                        <tr>
                            <td colspan="7" class="text-right">Погасить</td>
                            <th colspan="2">
                                <input type="text" value="{{ admin.subject.individualDiscount }}"
                                       name="individualDiscount" class="table-input js_order_update"/>
                            </th>
                        </tr>
                        <tr>
                            <td colspan="7" class="text-right">
                                <input type="text" value="{{ admin.subject.additionalSolarDescription }}"
                                       name="additionalSolarDescription" class="table-input text-right js_order_update"/>
                            </td>
                            <th colspan="2">
                                <input type="text" value="{{ admin.subject.additionalSolar }}" name="additionalSolar"
                                       class="table-input js_order_update"/>
                            </th>
                        </tr>
                        <tr>
                            <td colspan="7" class="text-right">К оплате</td>
                            <th colspan="2" id="individualDiscountedTotalPrice">{{ admin.subject.individualDiscountedTotalPrice }}</th>
                        </tr>
                    </tfoot>
                </table>

                <a class="btn btn-success btn-sm btn-outline sonata-ba-action js_order_add_size pull-right"><i class="fa fa-plus-circle"></i> Добавить размер</a>
            </div>
        </div>
    </div>
</div>
